

<div id="account_details" class="template_div">
	<div class="page_title_div">
		<span id="account_name_<%= @account.id %>" class="account_name"><%= @account.name%></span> 
		<%= render :partial => 'account_options', :locals => {:acc => @account} %>
	</div>
	
	<div class="detail_div">
		<div class="detail_label">
		  Name
		</div>
		<div class="detail_value">
		  <%=h @account.name %>
		</div>
		
		<div class="detail_label">
		  Description
		</div>
		<div class="detail_value">
		  <%=h @account.description %>
		</div>
		
		
		<div class="detail_label">
		  Balance
		</div>
		<div id="account_balance_<%= @account.id %>"class="detail_value">
		  <%=h real_currency @account.balance %>
		</div>
		
	</div>
</div>
