
<div id="account_pending" class="template_div">
	<div class="page_title_div">
		<h1>Pending Transactions for <span class="account_name"><%= @account.name%> <%= render :partial => 'account_options', :locals => {:acc => @account} %></span></h1>
	</div>
	
	<div id="transactions_pending_credit" class="type_div" style="display:<%= @transactions_credit.size > 0 ? "block" : "none" %>;">
		<h2>Payments</h2>
	  	<%= render :partial => 'account_pending_header' %>
	  	<%= render :partial => 'account_pending_details', :collection => @transactions_credit %>
	</div>
	
	<div id="transactions_pending_debit" class="type_div" style="display:<%= @transactions_debit.size > 0 ? "block" : "none" %>;pi">
		<h2>Income</h2>
	 	<%= render :partial => 'account_pending_header' %>
	  	<%= render :partial => 'account_pending_details', :collection => @transactions_debit %>
	  	<div style="clear: both;"><!-- clearing div --></div>
	</div>
</div>