

<div id="account_journal" class="template_div">
	<div class="page_title_div">
			<span class="account_name" id="account_name_<%= @account.id %>"><%= @account.name%><%= render :partial => 'account_options', :locals => {:acc => @account} %></span>
		<%= render :partial => 'date_span_selector_journal', :locals => {:form_url => journal_path(@account), :start_text_field_id => "start_date", :end_text_field_id => "end_date"}; %>
	</div><!-- page_title_div -->
	<div class="type_div">
			<div class="table_div">
		  	<%= render :partial => 'account_journal_header' %>
		  	<div id="journal_details">
	  			<%= render :partial => 'account_journal_details', :collection => @transactions %>
	  		</div>
	  		<div style="clear: both;"><!-- clearing div --></div>
	  	</div>
	</div><!-- type_div -->
</div><!-- account_journal -->