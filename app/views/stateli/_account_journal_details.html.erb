
  <div class="data_row">
    <div class="account_journal_data data_cell"><%=h account_journal_details.executed_date %></div>
    <div class="account_journal_data data_cell"><%=h account_journal_details.name %></div>
    <div class="account_journal_data_currency data_cell"><%= account_journal_details.type == 'TransactionCredit' ? (real_currency account_journal_details.amount) : "&nbsp;" %></div>
    <div class="account_journal_data_currency data_cell"><%= account_journal_details.type == 'TransactionDebit' ? (real_currency account_journal_details.amount) : "&nbsp;" %></div>
    <div class="account_journal_data_currency data_cell"><%= h real_currency account_journal_details.account_balance %></div>
	<div class="account_journal_data data_cell">
		<%= render :partial => 'transaction_options', :locals => {:acc => @account, :trans => account_journal_details} %>
  	</div>
  </div>

