
<% remote_form_for(:transaction, @transaction, :url => contract_create_transaction_path(@contract), :html => {:id => "listing_form_form"}) do |f| %>
  <%= f.error_messages %>
  
  <div class="form_element">
  	<div class="form_label">
    	Name
    </div>
    <div class="form_value">
   	 <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="form_element">
  	<div class="form_label">
    	Description
    </div>
    <div class="form_value">
    	<%= f.text_field :description %>
    </div>
  </div>
  
  <div class="form_element">
  	<div class="form_label">
  		Date Scheduled
    </div>
    <div class="form_value">
    	<%= render :partial => 'stateli/date_selector', :locals => {:form_for_obj => f, :text_field_id => "transaction_trans_date", :date_field => "trans_date"}; %>
    </div>
  </div>
  
  <div class="form_element">
  	<div class="form_label">
    	Amount
    </div>
    <div class="form_value">
    	<%= f.text_field :amount %>
    </div>
  </div>
  
  <div class="form_element">
  	<div class="form_label">
   		Completed
    </div>
    <div class="form_value">
    	<%= f.check_box :completed, {:onlick => "toggle_completed(this)"} %>
    </div>
  </div>
  
  <div id="transaction_autopay_checkbox_div" class="form_element">
  	<div class="form_label">
   		Autopay
    </div>
    <div class="form_value">
    	<%= f.check_box :autopay, {:onlick => "toggle_autopay(this)"} %>
    </div>
  </div>
    
  
   <div id="transaction_account_select_div" class="form_element">
  	<div class="form_label">
    	Account
    </div>
    <div class="form_value">
		<%= collection_select(:transaction, :account_id, Account.all, :id, :name) %> 
    </div>
  </div>
  
  <div class="submit_button_div">
    <%= f.submit 'Update' %>
  </div>
<% end %>
